<resources>
    <declare-styleable name="BaseNetworkImage">
        <attr name="circled" format="boolean" />
        <attr name="circledImageSize" format="dimension" />
    </declare-styleable>

    <declare-styleable name="ChipCloud">

        <attr name="chipCloudChipMargins" format="integer|reference" />
        <attr name="chipCloudHorizontal" format="boolean|reference" />
        <attr name="chipCloudChipItems" format="reference" />

        <!--Selection-->
        <attr name="chipCloudSelectMode">
            <enum name="none" value="1" />
            <enum name="single" value="2" />
            <enum name="multiple" value="3" />
        </attr>
        <attr name="chipCloudSelectedChip" format="integer" />


        <!--Selection-->
        <attr name="chipCloudSelected" format="integer" />

        <!--Text-->
        <attr name="chipCloudText" format="string|reference" />
        <attr name="chipCloudTextSize" format="float|reference" />
        <attr name="chipCloudTextColor" format="color|reference" />
        <attr name="chipCloudTextColorSelected" format="color|reference" />

        <!--Border-->
        <attr name="chipCloudBorderWidth" format="integer|reference" />
        <attr name="chipCloudBorderWidthSelected" format="integer|reference" />
        <attr name="chipCloudBorderColor" format="color|reference" />
        <attr name="chipCloudBorderColorSelected" format="color|reference" />

        <!--Background-->
        <attr name="chipCloudBackgroundColor" format="color|reference" />
        <attr name="chipCloudBackgroundColorSelected" format="color|reference" />

        <!--Radius-->
        <attr name="chipCloudCornerRadius" format="integer|reference" />

    </declare-styleable>


    <declare-styleable name="CropView">
        <!-- Viewport ratio used to compute height based off view width -->
        <attr name="cropviewViewportRatio" format="float" />
        <!-- Viewport overlay color -->
        <attr name="cropviewViewportOverlayColor" format="color" />
        <!-- Viewport overlay padding -->
        <attr name="cropviewViewportOverlayPadding" format="dimension" />
        <!-- Maximum zoom level -->
        <attr name="cropviewMaxScale" format="float" />
        <!-- Minimum  zoom level -->
        <attr name="cropviewMinScale" format="float" />
    </declare-styleable>

    <!-- color for AVLoadingIndicatorView -->
    <attr name="AVLoadingIndicatorColor" format="reference|color" />

</resources>