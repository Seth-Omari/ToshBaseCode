<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="ke.co.toshngure.demo.basecode.activity.MainActivity"
    tools:showIn="@layout/activity_main">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/activity_vertical_margin">

        <ke.co.toshngure.basecode.view.SimpleListItemView
            android:id="@+id/dataLoadingFullFragmentSLIV"
            style="@style/TestSimpleListItemView"
            app:sli_Title="Full Fragment Data Loading" />

        <ke.co.toshngure.basecode.view.SimpleListItemView
            android:id="@+id/dataLoadingBottomSheetSLIV"
            style="@style/TestSimpleListItemView"
            app:sli_Title="Bottom Sheet Data Loading" />

        <ke.co.toshngure.basecode.view.SimpleListItemView
            android:id="@+id/dialogSLIV"
            style="@style/TestSimpleListItemView"
            app:sli_Title="Default Base Dialog" />

        <ke.co.toshngure.basecode.view.SimpleListItemView
            android:id="@+id/customMessageDialogSLIV"
            style="@style/TestSimpleListItemView"
            app:sli_Title="Custom Message Base Dialog" />

        <ke.co.toshngure.basecode.view.SimpleListItemView
            android:id="@+id/drawableUtilsSLIV"
            style="@style/TestSimpleListItemView"
            app:sli_Title="Drawable Utils" />

        <ke.co.toshngure.basecode.view.SimpleListItemView
            android:id="@+id/networkAutoCompleteViewSLIV"
            style="@style/TestSimpleListItemView"
            app:sli_Title="Network AutoCompleteView" />

        <ke.co.toshngure.basecode.view.SimpleListItemView
            android:id="@+id/localAutoCompleteViewSLIV"
            style="@style/TestSimpleListItemView"
            app:sli_Title="Local AutoCompleteView" />

        <ke.co.toshngure.basecode.view.SimpleListItemView
            android:id="@+id/networkFilterableListViewSLIV"
            style="@style/TestSimpleListItemView"
            app:sli_Title="Network Filterable ListView" />

        <ke.co.toshngure.basecode.view.SimpleListItemView
            android:id="@+id/localFilterableListViewSLIV"
            style="@style/TestSimpleListItemView"
            app:sli_Title="Local Filterable ListView" />


    </LinearLayout>


</android.support.v4.widget.NestedScrollView>
